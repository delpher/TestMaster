<Page x:Class="SampleWpfApplication.Pages.UserDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      WindowTitle="User Details Example"
      Title="UserDetails" 
      Height="450" 
      Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel><TextBlock>First name: </TextBlock><TextBox Name="FirstNameField" Text="{Binding FirstName}"></TextBox></StackPanel>
        <StackPanel><TextBlock>Last name: </TextBlock><TextBox Name="LastNameField" Text="{Binding LastName}"></TextBox></StackPanel>
        <TextBlock Name="FullNameDisplay" Text="{Binding FullName}"></TextBlock>
    </StackPanel>
</Page>

<Window x:Class="SampleWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sampleWpfApplication="clr-namespace:SampleWpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance sampleWpfApplication:MainWindowViewModel}">
    <StackPanel Orientation="Vertical">
        <StackPanel><TextBlock>First name: </TextBlock><TextBox Name="FirstNameField" Text="{Binding FirstName}"></TextBox></StackPanel>
        <StackPanel><TextBlock>Last name: </TextBlock><TextBox Name="LastNameField" Text="{Binding LastName}"></TextBox></StackPanel>
        <TextBlock Name="FullNameDisplay" Text="{Binding FullName}"></TextBlock>
    </StackPanel>
</Window>